{
  "embedder": {
    "client_class": "OpenAIClient",
    "initialize_kwargs": {
      "api_key": "${EMBEDDING_API_KEY}",
      "base_url": "${EMBEDDING_BASE_URL}",
      "env_api_key_name": "EMBEDDING_API_KEY",
      "env_base_url_name": "EMBEDDING_BASE_URL"
    },
    "batch_size": 500,
    "model_kwargs": {
      "model": "${EMBEDDING_MODEL_NAME}",
      "dimensions": 256,
      "encoding_format": "float"
    }
  },
  "retriever": {
    "top_k": 20
  },
  "text_splitter": {
    "split_by": "word",
    "chunk_size": 350,
    "chunk_overlap": 100
  }
}
